      function findSumMaxAndMin (str) {
        let longestWord = 0;
        let shurtestWord = Infinity;
        for(let i = 0; i < str.length; i++) {
          if(str[i].length > longestWord)  {
            longestWord = str[i].length;
          }
        }
          for(let i = 0; i < str.length; i++) {
          if(str[i].length < shurtestWord) { 
        shurtestWord = str[i].length; 
        } 
        }
         return longestWord + shurtestWord;
        }
      console.log(findSumMaxAndMin(['anymore', 'raven', 'me', 'communicate']));

