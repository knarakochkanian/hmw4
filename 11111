      function sumArr (arr, arr1, arr2, arr3, arr4) {
        let result = 0;
        let arr5 =[]
        for (let i=0; i<sumArr.lenght ; i++) {
          for (let j=0; j<arr.lenght; j++) {
            result += arr[j]
            arr5.push(result)
          }
        }
        return arr5;
      }
      console.log (sumArr([[3, 4, 5], [1, 0, 0], [4, 5, 4], [8, 8, -1]]))

