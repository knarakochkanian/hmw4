      7.function arrayMax(arr) {
        let a = arr.length,  max = -Infinity;
        while (a--) {
          if (arr[a] > max) {
            max = arr[a];
          } 
          let arr2 = [];
          for (i=0; i<=max; i++) {
            arr2.push(arr[a])
          }
      };
      console.log (arrayMax ([4, 3, 0, 9,]))

