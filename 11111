      const size =5;
      let result = '';
      for (let i=0; i<size; i++) {
          let row = '';
          for (let j=0; j<size; j++) {
          if (i===0 || i=== size-1 ) {
            row +=brush
          } else if (j===1 || j===size-2) {
            row +=brush
          } else if (j===1 || j===size - 3) {
            row +=brush
          }
            else {
            row+=' '
          }
        } result +=row +'\n'
      }
