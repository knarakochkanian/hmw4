function replece (sentence, arr) {
  let index = 0;
  let nextSentence = '';
  for (let i = 0; i<sentence.length; i++) {
    if (sentence[i] === '_') {
      nextSentence += arr[index]
      index++
    } else {
      nextSentence+=sentence [i]}
  }
return nextSentence 
}
console.log (replece ('_, we have a _.', ['Houston', 'problem']))

