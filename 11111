  function filter (arr) {
    let result = 0;
    let arr2 =[]
   for (let i=0 ; i< arr.length; i++) {
     if (typeof arr[i] === `Number`) { 
       arr2.push (arr[i] !== 0 && arr[i]%2 === 0);
     }
   } return arr2
}
  console.log (filter([ 8, 0, 1, `hey`, 12, 5 , true, `2`, null, 7, 3]));
