      function findIndex (arr, num) {
        for (let i=0; i<arr.length; i++) {
          if (num === arr[i]) {
            return i;
          }
        }
               let a = Infinity;
                let index;
                for (let i=0; i<arr.length; i++){
                let b = Math.abs(arr[i]-num);
                if (b<a) {
                 a=b;
                 index=i;
              }
            }
               return arr[index];
          }
      console.log (findIndex([21, -9, 15, 2116, -71, 33], -71))

